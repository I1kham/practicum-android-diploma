<resources>

    <style name="BottomNavigator">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnSurface">@color/gray</item>
        <item name="background">@color/white</item>
        <item name="iconSize">24dp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textSize22">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="textSize16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="textSize32">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="titlePreviewButtonStyle">
        <!--        layout-->
        <item name="android:theme">@style/Base.Theme.PracticumAndroidDiploma</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="backgroundTint">@color/transparent</item>
        <!--        text-->
        <item name="android:textColor">@color/black</item>
        <item name="textStartPadding">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="progressBar">
        <!--        layout-->
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:indeterminateTint">@color/blue</item>
    </style>

</resources>
